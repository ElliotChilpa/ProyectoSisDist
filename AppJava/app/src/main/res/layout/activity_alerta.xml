<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatar"
            />
        <TextView
            android:id="@+id/txtsesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ComunicaciÃ³n y Seguridad"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:text="Bienvenido"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/a2"
        android:layout_below="@+id/a1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <ImageView

           android:layout_width="90dp"
           android:layout_height="90dp"
           android:src="@drawable/policia"
          />


        <Button
            android:gravity="center"
            android:id="@+id/btnpolicia"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/redondobtn"
            android:text="Policia"
            android:textColor="#272727"
            android:textSize="30sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/a3"
        android:layout_below="@+id/a2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/doctor"
            />


        <Button
            android:gravity="center"
            android:id="@+id/btnmedico"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/redondobtn"
            android:text="Medico"
            android:textColor="#272727"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a4"
        android:layout_below="@+id/a3"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bombero"
            />


        <Button
            android:gravity="center"
            android:id="@+id/btnbombero"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/redondobtn"
            android:text="Bombero"
            android:textColor="#272727"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a5"
        android:layout_below="@+id/a4"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/volcan"
            />


        <Button
            android:gravity="center"
            android:id="@+id/btnmsjdirect"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/redondobtn"
            android:text="Desastre \n natural"
            android:textColor="#272727"
            android:textSize="30sp" />

    </LinearLayout>
</RelativeLayout>